<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="messageService" class="com.revature.spring.ioc.MessageService">
        <constructor-arg value="Hello from constructor injection!" />
    </bean>

    <bean id="messageSetter" class="com.revature.spring.ioc.MessageService">
        <property name="message" value="Hello from setter injection!" />
    </bean>

</beans>

